echo -e " ${z}       $NC$r â‡² $NC$y Uptime Server ${NC} $RED=$NC $SERONLINE${NC}"
echo -e " ${z}â•°â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•¯${NC}"
echo -e "           ${YELL}â”Œâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”${NC}"
echo -e "               ${NC}â€‹  ğŸ‡¯â€‹â€‹ğŸ‡³â€‹ â€‹ğŸ‡¸â€‹â€‹ğŸ‡¹â€‹â€‹ğŸ‡´â€‹â€‹ğŸ‡·â€‹â€‹ğŸ‡ªâ€‹ â€‹ğŸ‡»â€‹â€‹ğŸ‡µâ€‹â€‹ğŸ‡³â€‹${NC}"
echo -e "           ${YELL}â””â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”˜${NC}"
echo -e "    ${z}â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—${NC}"
echo -e "            ${YELL}SSHWS${NC}  $y=$NC $ssh1$NC    ${YELL}VMESS${NC}  $y=$NC $vma$NC    ${YELL}VLESS${NC} $y=$NC $vla$NC"
echo -e "            ${YELL}TROJAN${NC} $y=$NC $trb$NC    ${YELL}SHADOW${NC} $y=$NC $ssa$NC    ${YELL}NOOBZ${NC} $y=$NC $ssa${NC}"
echo -e "    ${z}â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${NC}"
echo -e " ${z}â•­â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•®â•­â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•®â•­â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•®${NC}"
echo -e " ${z}  ${NC}$y SSH$NC : $status_ssh" "         $y NGINX$NC : $status_nginx" "         $y XRAY$NC : $status_xray     $NC${z}$NC" 
echo -e " ${z}  ${NC}$y WS-ePRO$NC : $status_ws_epro" "     $y DROPBEAR$NC : $status_dropbear" "      $y HAPROXY$NC : $status_haproxy  $NC${z}$NC" 
echo -e " ${z}â•°â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•¯â•°â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•¯â•°â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•¯${NC}"
echo -e "    ${z}â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${NC}"
echo -e "           ${z}$NC [${YELL}01${NC}]$green MENU SSH$NC     ${z} $NC [${YELL}06${NC}]$green MENU NOOBZVPN$NC  ${z}$NC"
echo -e "           ${z}$NC [${YELL}02${NC}]$green MENU VMESS$NC   ${z} $NC [${YELL}07${NC}]$green RESTART SERVICE$NC ${z}$NC"
echo -e "           ${z}$NC [${YELL}03${NC}]$green MENU VLESS$NC   ${z} $NC [${YELL}08${NC}]$green MENU SYSTEM$N$NC ${z} $NC"
echo -e "           ${z}$NC [${YELL}04${NC}]$green MENU TROJAN$NC  ${z} $NC [${YELL}09${NC}]$green MENU BACKUP$NC ${z} $NC"
echo -e "           ${z}$NC [${YELL}05${NC}]$green MENU SSWS$NC    ${z} $NC [${YELL}10${NC}]$green MENU UPDATE$NC ${z} $NC"
echo -e "    ${z}â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${NC}"
echo -e "           ${YELL}â”Œâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”${NC}"
echo -e "        ${BIBlack}    $NC ${IWhite}HARI INI${NC}: ${YELL}$ttoday$NC ${IWhite}KEMARIN${NC}: ${YELL}$tyest$NC"
echo -e "           ${YELL}â””â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”˜${NC}"
echo -e " ${z}â•­â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•®${NC}"
echo -e "        ${z}$NC$r â‡² $NC$y DOMAIN ${NC}        $RED=$NC $domain${NC}"
echo -e "        ${z}$NC$r â‡² $NC$y IP ADDRESS ${NC}    $RED=$NC $IPVPS${NC}"
echo -e "        ${z}$NC$r â‡² $NC$y USER ${NC}          $RED=$NC $username"
echo -e "        ${z}$NC$r â‡² $NC$y EXP SCRIPT ${NC}    $RED=$NC $exp $certifacate Days"
echo -e " ${z}â•°â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•¯${NC}"
echo -e ""
